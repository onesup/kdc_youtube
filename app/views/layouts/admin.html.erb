<!DOCTYPE html>
    <head>
        <title>숨 Admin</title>
        <%= stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "admin", "data-turbolinks-track" => true %>
        <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="http://flot.googlecode.com/svn/trunk/excanvas.min.js"></script><![endif]-->
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
       <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
      <%= csrf_meta_tag %>
      <script>
      $(document).ready(function() {
        $('#data-table').dataTable( {
            "bPaginate": false,
            "bLengthChange": false,
            "bFilter": true,
            "bSort": false,
            "bInfo": false,
            "bAutoWidth": false
        } );
 
        $("td.message p").shorten();
     
      } );
      </script>
    </head>
    
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                    </a>
                    <%= link_to "관리자", admin_path, class: "brand" %>
                    <div class="nav-collapse collapse">
                      <ul class="nav pull-right">
                        <li class="dropdown">
                          <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-user"></i>로그아웃<i class="caret"></i>
                          </a>
                          <ul class="dropdown-menu">
                            <li>
                              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "signout" %>         </li>
                          </ul>
                        </li>
                      </ul>
                        <ul class="nav">
                            <li class="dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">회원<b class="caret"></b></a>
                                <ul class="dropdown-menu" id="menu1">
                                    <li>
                                      <%= link_to "회원목록", admin_users_path %>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
              <% if user_signed_in? %>
                <div class="span3" id="sidebar">
                    <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                        <li>
                          <%= link_to admin_users_path do %>
                            <i class="icon-chevron-right"></i>신청자 현황
                          <% end %>
                        </li>
                        <li>
                          <%= link_to couponused_admin_users_path do %>
                            <i class="icon-chevron-right"></i>쿠폰 사용자 현황
                          <% end %>
                        </li>
                        <li>
                          <%= link_to admin_viral_actions_path do %>
                            <i class="icon-chevron-right"></i>바이럴 등록 현황
                          <% end %>
                        </li>
                        <li>
                          <%= link_to admin_traffic_logs_path do %>
                            <i class="icon-chevron-right"></i>채널별 유입 현황
                          <% end %>
                        </li>
                        <li>
                          <%= link_to logs_admin_traffic_log_path(1) do %>
                            <i class="icon-chevron-right"></i>주간 채널별 유입 현황
                          <% end %>
                        </li>
                        <li>
                          <%= link_to root_path do %>
                            <i class="icon-chevron-right"></i>사이트 바로가기(홈)
                          <% end %>
                        </li>
                    </ul>
                </div>
                <% end %>
                <!--/span-->
                <div class="span9" id="content">
                  <div>
                    <p class="flash_notice"><%#= notice %></p>
                    <p class="flash_alert"><%#= alert %></p>
                  </div>
                  <%= yield %>
                </div>
            </div>
            <hr>
            <footer>
                <p>&copy; Minivertizing 2014</p>
            </footer>
        </div>
        <!--/.fluid-container-->
    </body>

</html>