<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">참여자 목록</div>
    </div>
    <div class="row-fluid span6 offet1">
      <p class="total_user_header">참여자수</p>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>PC</th>
            <th>모바일</th>
            <th>합계</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @user_counts.each do |user| %>
            <td>
             <span><%=user.pc_count%></span>  
            </td>
            <td>
              <span><%=user.mobile_count%></span>  
            </td>
            <td>
              <span><%=user.total_count%></span>  
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row-fluid block-content collapse in">
      <div class="span11">
        <%= paginate @users %>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th class="device">디바이스</th>
              <th class="name">참여자</th>
              <th>전화번호</th>
              <th>접근건수</th>
							<th>쿠폰 다시보내기</th>
              <th>참여일시</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="">
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.access_logs.first.device unless user.access_logs.empty? %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.phone unless user.phone.nil? %>
                </td>
                <td>
                  <%= user.access_logs_count unless user.access_logs.empty? %>
                </td>
                <td>
                  <%= link_to user.coupon.code, send_message_admin_coupon_path(user.coupon) unless user.coupon.nil? %>
                </td>
                <td class="updated_at">
                  <p><%= user.updated_at.strftime("%m.%d %H:%M") %></p>
                </td>
								
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
