<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">바이럴 등록 목록</div>
    </div>
    <div class="row-fluid span6">
      <p class="total_user_header"><접속 경로 현황></p>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>날짜</th>
            <th>PC</th>
            <th>모바일</th>
            <th>합계</th>
          </tr>
        </thead>
        <tbody>
           <% @viral_action_counts_daily.each do |v| %>
           <tr>
            <td>
             <span><%=v.created_date%></span>  
            </td> 
            <td>
             <span><%=v.pc_count%></span>  
            </td>
            <td>
              <span><%=v.mobile_count%></span>  
            </td>
            <td>
              <span><%=v.total_count%></span>  
            </td>
          </tr>
          <% end %>
          <% @viral_action_counts_sum.each do |v| %>
          <tr>
            <td>
             <span>총합계</span>  
            </td>
            <td>
             <span><%=v.pc_count%></span>  
            </td>
            <td>
              <span><%=v.mobile_count%></span>  
            </td>
            <td>
              <span><%=v.total_count%></span>  
            </td>
          </tr>  
          <% end %>
        </tbody>
      </table>
    </div>
