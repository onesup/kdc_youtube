            <th>카카오톡</th>
						<th>블로그</th>
            <th>합계</th>
          </tr>
        </thead>
        <tbody>
           <% @viral_platform_counts_daily.each do |v| %>
           <tr>
            <td>
             <span><%=v.created_date%></span>  
            </td>
            <td>
             <span><%=v.facebook_count%></span>  
